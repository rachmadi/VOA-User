<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cardview_edunitas_uploader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10sp"
                android:paddingTop="10sp"
                android:clickable="false"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_cardview_order_history_usr_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profil" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_cardview_order_history_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:textStyle="bold"
                        android:text="John Mickley"
                        android:textColor="#424242"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/order_history_type_container"
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_cardview_order_history_username">

                        <TextView
                            android:id="@+id/tv_cardview_order_history_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="13sp"
                            android:maxLines="2"
                            android:maxWidth="180dp"
                            android:text="Hourly"
                            android:textColor="#42a5f5"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="14sp"
                            android:text="|"/>

                        <TextView
                            android:id="@+id/tv_cardview_order_history_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:maxWidth="180dp"
                            android:text="Dalam Perjalanan"
                            android:textColor="#42a5f5"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|end">

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:maxLines="2"
                        android:text="19/12/2017\n16:20"
                        android:textSize="11sp" />-->

                    <TextView
                        android:id="@+id/tv_cardview_order_history_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginRight="13sp"
                        android:maxLines="2"
                        android:layout_marginBottom="4dp"
                        android:maxWidth="180dp"
                        android:text="12 Mei 2017 / 10:19PM"
                        android:textColor="#424242"
                        android:textSize="11sp" />
                </RelativeLayout>

            </LinearLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_cardview_order_map_preview"
                    android:src="@drawable/avatar"/>
            </LinearLayout>-->

            <TextView
                android:id="@+id/tv_cardview_order_history_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider"
                android:layout_marginLeft="12sp"
                android:maxLines="2"
                android:layout_marginRight="13sp"
                android:layout_marginBottom="8sp"
                android:text="ajsndasdnaksdkasdnakdsnaksdnandsnkasdasdkansdkands"
                android:textColor="#616161"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f4f4f4"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat selengkapnya"
                    android:padding="16dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#e0e0e0"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>