<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="12dp"
            android:id="@+id/cardview_chat">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_listview_reimburse_id"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginBottom="2dp"
                        android:text="ID: 1001 " />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#616161"
                        android:layout_height="wrap_content"
                        android:text="Dikonfirmasi"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:maxWidth="180dp"
                        android:id="@+id/tv_listview_reimburse_status"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <ImageView
                            android:layout_marginRight="100dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_action_time"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#616161"
                            android:layout_height="wrap_content"
                            android:text="Apr 10, 13:45"
                            android:textSize="14sp"
                            android:maxLines="2"
                            android:maxWidth="180dp"
                            android:id="@+id/tv_listview_reimburse_timestamp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="2dp">
                        <ImageView
                            android:layout_marginRight="100dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_action_currency_rupiah"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:textColor="#616161"
                            android:layout_height="wrap_content"
                            android:text="52.000"
                            android:textSize="14sp"
                            android:maxLines="2"
                            android:maxWidth="180dp"
                            android:id="@+id/tv_listview_reimburse_amount"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f4f4f4"/>

</LinearLayout>